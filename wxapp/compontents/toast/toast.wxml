<!--toast.wxml-->

<!--mask 背景-->
<view class="toast_mask" wx:if="{{state.isShowMask}}"></view>
<!--以下为toast显示的内容-->
<view class="toast_content_box" wx:if="{{state.isShowToast}}">
  <view class="toast_content" wx:if="{{state.isShowToast}}">
    <view class="toast_content_text">
      {{state.toastText}}
    </view>
  </view>
</view>
